---
interface Props {
    href: string;
    classes?: string;
    variant?: "button" | "inline";
}

const { variant = "button" } = Astro.props;
---

<a
    href={Astro.props.href}
    target="_blank"
    rel="noopener noreferrer"
    class:list={[
        variant === "button" &&
            "bg-background text-font-color rounded border border-zinc-300 px-2 py-3 text-center text-sm transition-colors duration-200 ease-in-out hover:border-zinc-400 hover:bg-zinc-50 dark:border-zinc-800 dark:hover:border-zinc-700 dark:hover:bg-zinc-900",
        variant === "inline" && "underline",
        Astro.props.classes,
    ]}><slot /></a
>
