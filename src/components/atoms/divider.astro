---
interface Props {
    variant?: "default" | "light" | "dev" | "beyond";
    classes?: string;
}

const { variant = "default", classes } = Astro.props;
---

<hr
    class:list={[
        "h-px border-0",
        variant === "default" && "bg-accent",
        variant === "light" && "bg-zinc-200 dark:bg-zinc-700",
        variant === "dev" && "bg-dev",
        variant === "beyond" && "bg-beyond",
        classes,
    ]}
/>
