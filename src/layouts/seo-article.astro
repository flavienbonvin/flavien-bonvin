---
import { getEntry } from "astro:content";
import { CONFIG } from "const";

const params = Astro.params;
if (!params.slug) {
    return null;
}

const article = await getEntry({ collection: "blog", slug: params.slug }).then((res) => res?.data);
---

<title>{article?.title} | {CONFIG.author}</title>
<meta name="description" content={article?.description} />

<link rel="canonical" href={Astro.request.url} />

<meta property="og:site_name" content=`${CONFIG.author}` />
<meta property="og:title" content={article?.title} />
<meta property="og:description" content={article?.description} />
<meta property="og:type" content="article" />
<meta property="og:url" content={Astro.request.url} />
<meta property="article:published_time" content={article?.publicationDate.toISOString()} />
<meta property="article:tag" content={article?.tags?.join(", ")} />
<meta property="og:image" content={`${Astro.site}${article?.ogImage.src}`} />
<meta property="og:image:width" content={article?.ogImage.width.toString()} />
<meta property="og:image:height" content={article?.ogImage.height.toString()} />

<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content={article?.title} />
<meta name="twitter:description" content={article?.description} />
<meta name="twitter:url" content={Astro.request.url} />
<meta name="twitter:label1" content="Written by" />
<meta name="twitter:data1" content=`${CONFIG.author}` />
<meta name="twitter:site" content=`@${CONFIG.twitter}` />
<meta name="twitter:creator" content=`@${CONFIG.twitter}` />
<meta property="og:image" content={`${Astro.site}${article?.ogImage.src}`} />
