---
import { articleCardWidth } from "const";
import Divider from "../components/atoms/divider.astro";
import H1 from "../components/atoms/h1.astro";

interface Props {
    title: string;
}
---

<H1 classes="font-serif font-bold mb-1 text-xl sm:text-3xl">{Astro.props.title}</H1>
<p class:list={["mb-6 text-balance font-sans sm:text-lg", articleCardWidth]}><slot /></p>
<Divider variant="light" classes="mb-10 sm:mb-14" />
