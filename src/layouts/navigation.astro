---
import { PATHS } from "const";

const { pathname } = Astro.url;
const navLinks = [
    {
        href: PATHS.dev,
        text: "Dev",
    },
    {
        href: PATHS.beyond,
        text: "Beyond dev",
    },
    {
        href: PATHS.about,
        text: "About",
    },
];
---

<nav class="w-full py-6 font-mono">
    <ul class="flex items-baseline justify-between gap-4">
        <li class="relative cursor-pointer text-xl">
            <a href={PATHS.home} class="relative">Flavien</a>
        </li>
        <li>
            <ul class="flex gap-3 sm:gap-4">
                {
                    navLinks.map(({ href, text }) => (
                        <li>
                            <a
                                class:list={[
                                    "underline-offset-2 hover:underline",
                                    href === PATHS.dev && "decoration-dev",
                                    href === PATHS.beyond && "decoration-beyond",
                                    href === PATHS.about && "decoration-accent",
                                    href === PATHS.dev &&
                                        pathname.includes(href) &&
                                        "font-medium underline decoration-dev",
                                    href === PATHS.beyond &&
                                        pathname.includes(href) &&
                                        "font-medium underline decoration-beyond",
                                    href === PATHS.about &&
                                        pathname.includes(href) &&
                                        "font-medium underline decoration-accent",
                                ]}
                                href={href}
                            >
                                {text}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </li>
    </ul>
</nav>
