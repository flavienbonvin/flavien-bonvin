---
import { Icon } from "astro-icon/components";
import { URLS } from "const";
import Divider from "@components/atoms/divider.astro";
import ExternalLink from "@components/atoms/external-link.astro";
---

<Divider classes="mb-7" />

<div class="flex flex-row flex-wrap gap-x-3 gap-y-3">
    <ExternalLink href={URLS.twitter} classes="flex w-36 items-center justify-center gap-2"
        >Follow me on <Icon name="twitter" /></ExternalLink
    >
    <ExternalLink
        href={`${Astro.site}rss.xml`}
        classes="flex w-36 items-center justify-center gap-2"
        ><Icon name="rss" />RSS feed</ExternalLink
    >
    <ExternalLink href={URLS.blogGithub} classes="flex w-36 items-center justify-center gap-2"
        ><Icon name="github" />Github</ExternalLink
    >
</div>
